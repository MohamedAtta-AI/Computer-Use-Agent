# Production Environment Variables
# Copy this file to .env.prod and update with your production values

# API Configuration
API_TITLE=Computer Use Agent API
API_VERSION=1.0.0
API_DESCRIPTION=A scalable backend for computer use agent session management

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Database Configuration (Production)
DATABASE_URL=postgresql://user:password@postgres:5432/computer_use_agent

# Redis Configuration (Production)
REDIS_URL=redis://redis:6379

# Anthropic API Configuration
ANTHROPIC_API_KEY=your_production_anthropic_api_key_here
ANTHROPIC_MODEL=claude-sonnet-4-20250514
DEFAULT_MAX_TOKENS=4096
DEFAULT_TEMPERATURE=1.0
TOOL_TIMEOUT=120.0

# VNC Configuration
VNC_HOST=your_vnc_server_host
VNC_PORT=5900
VNC_PASSWORD=your_vnc_password_here

# Security Configuration (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=your_very_long_random_secret_key_at_least_64_characters_for_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=104857600

# WebSocket Configuration
WEBSOCKET_PING_INTERVAL=20
WEBSOCKET_PING_TIMEOUT=20 